/* styles.css */
:root {
    --deep-blue: #003366;
    --crisp-white: #FFFFFF;
    --teal: #008080;
}

body {
    margin: 0;
    font-family: 'Arial', sans-serif;
    color: var(--deep-blue);
    background: url('assets/background.jpg') no-repeat center center fixed;
    background-size: cover;
}

header {
    text-align: center;
    padding: 5rem 1rem;
    background-color: rgba(255, 255, 255, 0.85);
}

nav {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
}

nav ul {
    list-style: none;
    padding: 0;
}

nav ul li {
    margin: 0 1rem;
}

nav a {
    text-decoration: none;
    color: var(--deep-blue);
}

h1 {
    font-size: 2.5rem;
    margin: 0;
}

p {
    font-size: 1.25rem;
}

.cta-button {
    background-color: var(--teal);
    color: var(--crisp-white);
    padding: 1rem 2rem;
    border: none;
    border-radius: 5px;
    text-decoration: none;
    transition: background 0.3s;
}

.cta-button:hover {
    background-color: darken(var(--teal), 10%);
}

main {
    padding: 2rem;
}

h2 {
    font-size: 2rem;
    margin: 2rem 0 1rem;
}

.feature-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
}

.feature-item {
    background: rgba(255, 255, 255, 0.9);
    padding: 1.5rem;
    border-radius: 5px;
    transition: transform 0.3s;
}

.feature-item:hover {
    transform: translateY(-5px);
}

form {
    display: flex;
    flex-direction: column;
}

input, textarea {
    margin-bottom: 1rem;
    padding: 1rem;
    border: 1px solid var(--deep-blue);
    border-radius: 5px;
}

button {
    background-color: var(--teal);
    color: var(--crisp-white);
    padding: 1rem;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background 0.3s;
}

button:hover {
    background-color: darken(var(--teal), 10%);
}

footer {
    text-align: center;
    padding: 1rem;
    background-color: rgba(255, 255, 255, 0.85);
}

@media (max-width: 600px) {
    h1 {
        font-size: 2rem;
    }

    h2 {
        font-size: 1.5rem;
    }

    .cta-button, button {
        width: 100%;
    }
}
